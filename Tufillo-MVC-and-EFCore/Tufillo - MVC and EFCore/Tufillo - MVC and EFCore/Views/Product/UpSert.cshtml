@*whenever user enters any category name and display order,
the value must be passed to our action method which will
be a post action method for category*@
@model Tufillo.Infrastructure.Models.Product;

@*
dynamically creation of the variable*@
@{
    var title = "Create Product";
}

<form method="post" enctype="multipart/form-data">
    @if (Model.Id != 0)
    {
        title = "Edit Product";
        <input asp-for="Id" hidden />
    }
    <div class="border p-3">
        @*for error validation message in ui*@
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @*calling of the variable*@
        <h2 class="text-info pl-2">@title</h2>

        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Description"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Description" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Price"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Price" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Image"></label>
                    </div>
                    <div class="col-8">
                        <input type="file" name="files" id="uploadBox" multiple class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="CategoryId"></label>
                    </div>
                    <div class="col-8">
                        @*passing as viewbag*@
                        @*<select asp-for="CategoryId" asp-items="@ViewBag.CategoryDropdown" class="form-control">*@
                        @*passing as viewdata*@
                        <select asp-for="CategoryId" asp-items="@ViewData["CategoryDropdown"] as IEnumerable<SelectListItem>" class="form-control">
                            <option selected>--Select Category--</option>
                        </select>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            @if (Model.Id != 0)
                            {
                                @* //update*@
                                <input type="submit" class="btn btn-info w-100" value="Update" />
                            }
                            else
                            {
                                @* //create*@
                                <input type="submit" onclick="return validateInput()" class="btn btn-primary w-100" value="Update" />
                            }
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100"> <i class="fa-solid fa-right-from-bracket"></i>Back </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-4">
            @* Keep this empty *@
        </div>
    </div>
</form>


@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    }