@*whenever user enters any category name and display order,
the value must be passed to our action method which will
be a post action method for category*@
@model Tufillo.Infrastructure.Models.Category;

<form method="post" asp-action="DeleteCategory">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        @*for error validation message in ui*@
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <h2 class="text-info pl-2">Delete Category</h2>

        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        @*using the disabled keyword for disabling the 
                        inputs as user should not access it*@
                        <input asp-for="Name" disabled class="form-control" />
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="DisplayOrder"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="DisplayOrder" disabled class="form-control" />
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <input type="submit" class="btn btn-danger w-100" value="Delete" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100"><i class="fa-solid fa-right-from-bracket"></i> Back </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-4">
            @* Keep this empty *@
        </div>
    </div>
</form>


@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    }